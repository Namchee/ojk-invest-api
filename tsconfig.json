{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": [
      "DOM",
      "ES2019.Array",
      "ES2020.Promise",
      "ES2021.String"
    ] ,
    "outDir": "./dist",
    "removeComments": true,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/*": 						["src/*"]
    }
  },
  "include": ["src/**/*", "index.d.ts", "scripts/**/*"],
  "exclude": ["node_modules"]
}
